<div class="row">
    <div class="col s12 m7">
        <div id="test_show" class="card text-center">

            <div class="card-content light-blue lighten-5">
                <h3><%= @testimony.title %></h3><br>
                <h4><%= @testimony.verse %></h4>
            </div>
            <div class="card-action">
                <%= link_to "Delete Testimony", destroy_testimony_path, class: "btn btn-danger", method: :delete, data: {confirm: "Delete #{@testimony.title}?"} %>

                <%= link_to "Leave a Comment", new_testimony_comment_path(@testimony), class: "btn btn-danger", method: :get %>

            </div>
        </div>

    </div>
