<center>
    <div id="forms">
        <div>
            <div class="container">
                <h4>Leave a Comment</h4>
                <div class="row">
                    <div class="col-xs-10">

                        <%= form_for() do |f| %>
                        <div>
                            <%= f.text_area :comment, placeholder: "Thoughts?" %>
                        </div>
                        <%= f.submit "Submit" %>
                        <% end %>

                    </div>
                </div>
            </div>
        </div>
    </center>
